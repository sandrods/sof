<% content_for :body_content_title do %>
  <%= @evento.titulo %>
<% end %>

<% content_for :body_content_left do %>

<div class="eventos">

    <p>
      <%=raw @evento.lead %>
    </p>

	<dl>
		<dt>Data Inicio:</dt>
		<dd><%= @evento.inicio.strftime('%d/%m/%Y') %></dd>

		<dt>Data Fim:</dt>
		<dd><%= @evento.fim.strftime('%d/%m/%Y') %></dd>

		<dt>Local:</dt>
		<dd><%= @evento.local %></dd>

		<dt>Detalhes:</dt>
		<dd><%= raw @evento.detalhe %></dd>

	</dl>

</div>
<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="eventos">
      <% @eventos.each do |evento| %>
        <li>
          <%= link_to evento.titulo, evento_url(evento) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render :partial => "/shared/content_page" %>

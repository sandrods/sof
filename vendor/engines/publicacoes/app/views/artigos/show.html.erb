<% content_for :body_content_title do %>
  <%= @artigo.titulo %>
<% end %>

<% content_for :body_content_left do %>

  <%= image_fu(@artigo.imagem, nil) %>
  <%= link_to("#{@artigo.arquivo.file_name} (#{number_to_human_size(@artigo.arquivo.size)})", @artigo.arquivo.url) %>

<% end %>

<% content_for :body_content_right do %>

    <h2><%= t('.other') %></h2>
    <ul id="artigos">
      <% @artigos.each do |artigo| %>
		<%- unless artigo.id == @artigo.id -%>
        <li>
          <%= link_to artigo.titulo, artigo_url(artigo) %>
        </li>
      	<% end %>
      <% end %>
    </ul>

<% end %>

<%= render :partial => "/shared/content_page" %>

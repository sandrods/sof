<% content_for :body_content_title do %>
  <%= @categoria.titulo %>
<% end %>

<% content_for :body_content_left do %>
  <%- if @categoria.artigos.present? -%>
  <ul id="artigos" class="art">
    <% @categoria.artigos.each do |artigo| %>
      <li>
        <%= link_to(artigo.titulo, artigo_url(artigo)) %>
        <%= image_fu(artigo.imagem, :fat, :align=>"right") %>
		<small>Publicado em <%= artigo.created_at.strftime('%d/%m/%Y, às %H:%M')%></small>
      </li>
    <% end %>
  </ul>
  <%- else -%>
    <br/>
	<h3>Não foram encontradas artigos</h3>
    <br/>
  <%- end -%>
<%- end -%>


<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="categorias">
      <% Categoria.all.each do |categoria| %>
        <li>
          <%= link_to categoria.titulo, categoria_url(categoria) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render :partial => "/shared/content_page" %>

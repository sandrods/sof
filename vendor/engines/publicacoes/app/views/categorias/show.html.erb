<% content_for :body_content_title do %>
  <%= @categoria.titulo %>
<% end %>

<% content_for :body_content_left do %>
  <% if @categoria.artigos.any? %>
  <article id="blog_posts">
    <ul>
    <%= render :partial => "/shared/artigo", :collection => @categoria.artigos %>
    </ul>
  </article>
  <% else %>
    <p>
      <%= t('.no_posts') %>
    </p>
  <% end %>
<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="categorias">
      <% Categoria.all.each do |categoria| %>
        <li>
          <%= link_to categoria.titulo, categoria_url(categoria) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render :partial => "/shared/content_page" %>

<%= render :partial => '/admin/submenu' %>
<div id='records'>
  <% if searching? %>
    <h2><%= t('shared.admin.search.results_for', :query => params[:search]) %></h2>
    <% if @categorias.any? %>
      <%= render :partial => "categoria",
                 :collection => @categorias %>
    <% else %>
      <p><%= t('admin.search_no_results') %></p>
    <% end %>
  <% else %>
    <% if @categorias.any? %>
      <%= will_paginate @categorias %>

      <%= render :partial => "sortable_list" %>

      <%= will_paginate @categorias %>
    <% else %>
      <p>
        <strong>
          <%= t('.no_items_yet', :create => t('admin.submenu.categories.new')) %>
        </strong>
      </p>
    <% end %>
  <% end %>
</div>

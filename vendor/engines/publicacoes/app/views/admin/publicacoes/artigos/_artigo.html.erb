<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(artigo) -%>">
  <span class='title'>
    <%= artigo.titulo %>
    <span class="preview">&nbsp;</span>
  </span>
  <span class='actions'>
    <%= link_to refinery_icon_tag("application_go.png"), publicacoes_artigo_url(artigo),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    <%= link_to refinery_icon_tag("application_edit.png"), edit_admin_publicacoes_artigo_path(artigo),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), admin_publicacoes_artigo_path(artigo),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :method => :delete,
        :confirm => t('shared.admin.delete.message', :title => artigo.titulo) %>
  </span>
</li>

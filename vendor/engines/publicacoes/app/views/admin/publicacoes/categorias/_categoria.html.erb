<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(categoria) -%>">
  <span class='title'>
    <%= categoria.titulo %>
    <span class="preview">&nbsp;</span>
  </span>
  <span class='actions'>
    <%= link_to refinery_icon_tag("application_edit.png"),
                edit_admin_publicacoes_categoria_path(categoria, :dialog => true, :height => 325),
                :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), admin_publicacoes_categoria_path(categoria),
                :class => "cancel confirm-delete",
                :title => t('.delete'),
                :method => :delete,
                :confirm => t('shared.admin.delete.message', :title => categoria.titulo) %>
  </span>
</li>

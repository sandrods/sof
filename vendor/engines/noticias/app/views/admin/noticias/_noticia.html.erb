<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(noticia) -%>">
  <span class='title'>
    <%= noticia.titulo %>
    <span class="preview">&nbsp;</span>
  </span>
  <span class='actions'>
    <%= link_to refinery_icon_tag("application_go.png"), noticia_url(noticia),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    <%= link_to refinery_icon_tag("application_edit.png"), edit_admin_noticia_path(noticia),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), admin_noticia_path(noticia),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'shared.admin.delete', :title => noticia.titulo),
        :method => :delete %>
  </span>
</li>

<% content_for :body_content_title do %>
  <%= @noticia.titulo %>
  <fb:like send="false" layout="button_count" width="450" show_faces="false" action="recommend" href="<%= request.url %>"></fb:like>
<% end %>

<% content_for :body_content_left do %>

<%= image_fu(@noticia.foto, :medium, :align=>"left") %>

  <%= raw @noticia.detalhe %>
  <div class="light">Publicada em <%=@noticia.data.strftime('%d/%m/%Y')%></div>

<% end %>

<% content_for :body_content_right do %>

    <h2>Outras Not√≠cias</h2>
    <ul id="noticias">
      <% @noticias.each do |noticia| %>
        <%- unless noticia.id == @noticia.id -%>
        <li>
          <%= link_to noticia.titulo, noticia_url(noticia) %>
        </li>
        <% end %>
      <% end %>
    </ul>

<% end %>

<%= render :partial => "/shared/content_page" %>
